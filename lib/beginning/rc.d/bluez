#!/bin/bash

bluez_exists() {
    if prog_exists bluetoothd || PATH=/usr/libexec/bluetooth prog_exists bluetoothd;then
        return 0
    else
        return 1
    fi
}

bluez_depends() {
    echo dbus dev
}

bluez_start() {
    PATH="/usr/libexec/bluetooth/:${PATH}"
    bluetoothd -n ${BLUEZ_ARGS} >/dev/null 2>&1 &
    echo $! > /run/bluetooth.pid
}

bluez_stop() {
    pidfilekill /run/bluetooth.pid
    bluez_status || rm -f /run/bluetooth.pid
}

bluez_status() {
    pidfileexists /run/bluetooth.pid
}
